<h1>Log in</h1>

<form method="POST" action="/auth/login">

  <div class="field" >
    <label>Name</label>
    <input type="text" name="username"/>
  </div>

  <div class="field" >
    <label>Password</label>
    <input type="password" name="password"/>
  </div>

  <div class="field submit">
    <button type="submit">Log in</button>
  </div>
</form>

{{#if message}}
<ul class="validation">
  <li>{{message}}</li>
</ul>
{{/if}}